{
  "name": "pertamina-design-system",
  "version": "1.0.0",
  "private": true,
  "description": "PACER â€” Pertamina Patra Niaga Components & Experience Resources - Enterprise-grade design system for React, Vue, and Blazor",
  "repository": {
    "type": "git",
    "url": "https://github.com/pertamina/design-system.git"
  },
  "license": "UNLICENSED",
  "author": "Pertamina Patra Niaga | IT Division",
  "workspaces": [
    "packages/design-system/*",
    "packages/storybook/*",
    "packages/web-docs/*",
    "packages/templates/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:smoke": "playwright test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version:bump": "changeset version",
    "release": "turbo run build && changeset publish",
    "react": "concurrently \"pnpm --filter @pacer-ui/react dev\" \"pnpm --filter @pacer-ui/storybook-react storybook\"",
    "vue": "concurrently \"pnpm --filter @pacer-ui/vue dev\" \"pnpm --filter @pacer-ui/storybook-vue storybook\"",
    "blazor": "pnpm --filter blazor-build-tools watch:css",
    "storybook:react": "pnpm --filter @pacer-ui/storybook-react storybook",
    "storybook:vue": "pnpm --filter @pacer-ui/storybook-vue storybook",
    "docs:react-vue": "pnpm --filter @pacer-ui/web-docs-react-vue dev",
    "docs:blazor": "pnpm --filter @pacer-ui/web-docs-blazor dev",
    "docs:unified": "concurrently \"pnpm --filter @pacer-ui/tokens dev\" \"pnpm --filter @pacer-ui/tailwind-preset dev\" \"pnpm --filter @pacer-ui/vue dev\" \"pnpm --filter @pacer-ui/react dev\" \"pnpm --filter @pacer-ui/docs dev\" --names \"tokens,tailwind,vue,react,docs\" --prefix-colors \"blue,green,yellow,cyan,magenta\""
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@changesets/cli": "^2.27.1",
    "eslint-plugin-storybook": "^0.6.0",
    "vue-eslint-parser": "^9.4.3",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "preact": ">=10.28.2",
      "esbuild": ">=0.25.0",
      "lodash": ">=4.17.23"
    }
  }
}
