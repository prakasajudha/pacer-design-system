<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Pertamina.DesignSystem.Blazor</RootNamespace>
    <AssemblyName>Pertamina.DesignSystem.Blazor</AssemblyName>
    <PackageId>Pertamina.DesignSystem.Blazor</PackageId>
    <Version>1.0.0</Version>
    <Authors>Pertamina Digital Technology Team</Authors>
    <Company>PT Pertamina (Persero)</Company>
    <Product>PACER â€” Pertamina Patra Niaga Components & Experience Resources</Product>
    <Description>Blazor Razor Component Library for PACER (Pertamina Patra Niaga Components & Experience Resources)</Description>
    <PackageTags>blazor;components;design-system;pertamina;ui;pacer</PackageTags>
    <RepositoryUrl>https://github.com/pertamina/design-system</RepositoryUrl>
    <PackageLicenseExpression>Proprietary</PackageLicenseExpression>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <!-- Tailwind CSS output (compiled) -->
    <Content Include="wwwroot\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.0" />
  </ItemGroup>

</Project>
