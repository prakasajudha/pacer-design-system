{
  "name": "@pacer-ui/tokens",
  "version": "1.0.0",
  "description": "Framework-agnostic design tokens for PACER (Pertamina Patra Niaga Components & Experience Resources)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./json": "./dist/tokens.json",
    "./css": "./dist/tokens.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts && node scripts/build-tokens.js",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "pertamina"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
